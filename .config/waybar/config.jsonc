    "output": "eDP-1",
    "position": "top",
    "mode": "dock",
    "modules-left": ["hyprland/workspaces", "tray", "custom/music"],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio", "custom/blue", "backlight", "network", "power-profiles-daemon", "cpu", "memory", "battery", "custom/power"],
    
    // left
    "hyprland/workspaces": {
